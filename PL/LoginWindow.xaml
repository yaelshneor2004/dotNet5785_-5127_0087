<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Height="51" Margin="159,217,0,0" VerticalAlignment="Top" Width="165" Click="Login_Click"/>

        <Label Content="Enter your password" HorizontalAlignment="Left" Height="29" Margin="112,138,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Enter your id" HorizontalAlignment="Left" Height="29" Margin="122,80,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBox Text="{Binding TextBoxId}" HorizontalAlignment="Left" Height="29" Margin="259,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="130"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="29" Margin="259,138,0,0" VerticalAlignment="Top" Width="130" PasswordChanged="PasswordBox_PasswordChanged"/>
        <!-- @PasswordBox -->
        <TextBox x:Name="VisiblePassword" HorizontalAlignment="Left" Height="29" Margin="259,138,0,0" VerticalAlignment="Top" Width="130" Visibility="Collapsed"/>
        <!-- @TextBox מוצג כ- PasswordBox רגיל -->
        <Button Content="👁️" HorizontalAlignment="Left" Height="29" Margin="394,138,0,0" VerticalAlignment="Top" Width="30" Click="TogglePasswordVisibility"/>
        <!-- @כפתור תצוגה -->
    </Grid>
</Window>
