<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        >
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Height="51" Margin="192,237,0,0" VerticalAlignment="Top" Width="230" Click="Login_Click"/>

        <Label Content="Enter your password" HorizontalAlignment="Left" Height="47" Margin="112,153,0,0" VerticalAlignment="Top" Width="142"/>
        <Label Content="Enter your id" HorizontalAlignment="Left" Height="53" Margin="122,80,0,0" VerticalAlignment="Top" Width="132"/>
        <TextBox Text="{Binding TextBoxId}" HorizontalAlignment="Left" Height="53" Margin="259,80,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="130"/>
        <local:BindablePasswordBox Password="{Binding Password, Mode=TwoWay}" HorizontalAlignment="Left" Height="47" Margin="259,153,0,0" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="VisiblePassword" HorizontalAlignment="Left" Height="29" Margin="259,138,0,0" VerticalAlignment="Top" Width="130" Visibility="Collapsed"/>
        <Button Content="👁️" HorizontalAlignment="Left" Height="35" Margin="411,163,0,0" VerticalAlignment="Top" Width="59" Click="TogglePasswordVisibility"/>
    </Grid>
</Window>
