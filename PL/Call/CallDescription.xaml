<Window x:Class="PL.Call.CallDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CallDescription" Height="450" Width="800"
                DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Language="he-IL" Loaded="CallWindow_Loaded" Closed="CallWindow_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Label Content="Call Description:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding CurrentCall.Description, Mode=TwoWay}" Width="636" Height="74"/>
        </StackPanel>

        <!--<WebBrowser x:Name="webBrowser" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"/>-->
    </Grid>
</Window>
