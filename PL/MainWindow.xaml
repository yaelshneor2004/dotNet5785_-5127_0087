<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="MainWindow_Loaded" 
        Closed="MainWindow_Closed">
    <!--grid in all the window-->
    <Grid>

        <Grid HorizontalAlignment="Left" Height="434" VerticalAlignment="Top" Width="803" Margin="1,-1,0,0" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.045"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="220" Margin="2,6,0,0" VerticalAlignment="Top" Width="304"/>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="179" Margin="-1,252,0,0" VerticalAlignment="Top" Width="798">
                <Button Content="Handle Calls" HorizontalAlignment="Left" Height="73" Margin="612,42,0,0" VerticalAlignment="Top" Width="127" Click="btnHandleCalls_Click"/>
                <Button Content="Handle Volunteers" HorizontalAlignment="Left" Height="73" Margin="436,40,0,0" VerticalAlignment="Top" Width="127" Click="btnHandleVolunteers_Click"/>
                <Button Content="Reset DB" HorizontalAlignment="Left" Height="73" Margin="254,41,0,0" VerticalAlignment="Top" Width="127" Click="btnResetDB_Click"/>
                <Button Content="Init DB" HorizontalAlignment="Left" Height="73" Margin="68,43,0,0" VerticalAlignment="Top" Width="127" Click="btnInitDB_Click"/>
                <Label Content="" Margin="137,-471,-137,471"/>
            </Grid>
            <Grid Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="259" Margin="264,7,0,0" VerticalAlignment="Top" Width="534">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="110"/>
                </Grid.RowDefinitions>
                <Button Content="Add One Minute" HorizontalAlignment="Left" Height="26" Margin="109,100,0,0" VerticalAlignment="Top" Width="369" Click="btnAddOneMinute_Click"/>
                <Button Content="Add One Day" HorizontalAlignment="Left" Height="26" Margin="111,60,0,0" VerticalAlignment="Top" Width="369" Click="btnAddOneMinute_Click"/>
                <Button Content="Add One Hour" HorizontalAlignment="Left" Height="26" Margin="109,139,0,0" VerticalAlignment="Top" Width="369" Grid.RowSpan="2" Click="btnAddOneHour_Click"/>
                <Button Content="Add One Month" HorizontalAlignment="Left" Height="26" Margin="108,30,0,0" VerticalAlignment="Top" Width="369" Grid.Row="1" Click="btnAddOneMonth_Click"/>
                <Button Content="Add One Year" HorizontalAlignment="Left" Height="26" Margin="109,71,0,0" VerticalAlignment="Top" Width="369" Grid.Row="1" Click="btnAddOneYear_Click"/>
                <Label Content="Max Range" HorizontalAlignment="Left" Height="28" Margin="-215,40,0,0" VerticalAlignment="Top" Width="157"/>
                <TextBox Text="{Binding MaxRiskRange ,Mode=TwoWay}" Margin="-250,94,668,27"/>
                <Button Content="Update" HorizontalAlignment="Left" Height="35" Margin="-96,97,0,0" VerticalAlignment="Top" Width="74" Click="btnUpdate_Click"/>
                <Label Content="{Binding CurrentTime}" FontWeight="Bold" FontSize="20" Margin="361,-347,-361,237"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
